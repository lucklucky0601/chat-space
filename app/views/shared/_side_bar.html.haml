.side-bar
  .side-bar__user-name
    .side-bar__top-items
      .side-bar__top-items__name
        = current_user.name
      .side-bar__top-items__icons
        =link_to new_group_path(@group), class: "top-items" do
          = icon('fa', 'edit', class: "top-items-left")
        =link_to edit_user_path(current_user), class: "top-items" do
          = icon('fa', 'cog', class: "top-items-right")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side-bar__group-list__name
            = group.name
          .side-bar__group-list__message
            = group.show_last_message



